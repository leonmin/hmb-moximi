/* 录音播放效果 */
@-webkit-keyframes yuying1 {
0% {
		height: 0%;
}
20% {
		height: 50%;
}
50% {
		height: 100%;
}
80% {
		height: 50%;
}
100% {
		height: 0%;
}
}
@keyframes yuying1 {
0% {
		height: 0%;
}
20% {
		height: 50%;
}
50% {
		height: 100%;
}
80% {
		height: 50%;
}
100% {
		height: 0%;
}
}
