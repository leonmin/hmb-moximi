/* 录音效果 */
.container {
	/* position: absolute; */
	position: relative;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	width: 250rpx;
	height: 250rpx;
	margin: 10rpx auto;
}
.isRec>.wave {
	position: relative;
	width: 200rpx;
	height: 200rpx;
	z-index: 8;
}
.isRec .circle {
	position: absolute;
	border-radius: 50%;
	opacity: 0;
}

/* 波纹效果 */
.isRec .circle {
	width: 200rpx;
	/* 减去边框的大小 */
	height: 200rpx;
	/* 减去边框的大小 */
}
.isRec .circle:first-child {
	-webkit-animation: circle-opacity 2s infinite;
	        animation: circle-opacity 2s infinite;
}
.isRec .circle:nth-child(2) {
	-webkit-animation: circle-opacity 2s infinite;
	        animation: circle-opacity 2s infinite;
	-webkit-animation-delay: .3s;
	        animation-delay: .3s;
}
.isRec .circle:nth-child(3) {
	-webkit-animation: circle-opacity 2s infinite;
	        animation: circle-opacity 2s infinite;
	-webkit-animation-delay: .6s;
	        animation-delay: .6s;
}
.isRec>.wave.ripple.danger .circle {
	background-color: #CDE1FF;
}

/* 波动效果 */
.isRec .circle:first-child {
	-webkit-animation: circle-opacity 2s infinite;
	        animation: circle-opacity 2s infinite;
}
@-webkit-keyframes circle-opacity {
from {
		opacity: 1;
		-webkit-transform: scale(1);
		        transform: scale(1);
}
to {
		opacity: 0;
		-webkit-transform: scale(1.5);
		        transform: scale(1.5);
}
}
@keyframes circle-opacity {
from {
		opacity: 1;
		-webkit-transform: scale(1);
		        transform: scale(1);
}
to {
		opacity: 0;
		-webkit-transform: scale(1.5);
		        transform: scale(1.5);
}
}
